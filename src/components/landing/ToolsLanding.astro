---
import ToolsImage from "../../assets/img/ToolsImage.webp"
---
<section class="flex flex-col justify-center w-full min-h-screen px-12 py-12">
    <div class="flex flex-col lg:flex-row ">
      <!-- Select en la parte izquierda -->
      <div class="w-full lg:w-1/4 mb-8 lg:mb-0  bg-gray-100  border-r border-solid border-gray-300 px-2">
        <select id="itemSelect" class="w-full p-2 border border-gray-300 rounded">
          <option value="all">Todos</option>
          <option value="blog">Blogs</option>
          <option value="video">Videos</option>
          <option value="articulo">Articulos</option>
        </select>
      </div>
      <!-- Tarjetas en la parte derecha -->
      <div id="cardContainer" class="p-10 w-full lg:w-3/4 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <!-- Las tarjetas se insertarán aquí dinámicamente -->
      </div>
    </div>
  </section>
  
  <script>
    const itemSelect = document.getElementById('itemSelect');
    const cardContainer = document.getElementById('cardContainer');
  
    const cardsData = [
      { id: 1, type: 'video', title: 'Video 1', description: 'Descripción de la tarjeta 1.1', link: 'https://example.com/video1', image:'' },
      { id: 2, type: 'video', title: 'Video 2', description: 'Descripción de la tarjeta 1.2', link: 'https://example.com/video2', image:'' },
      { id: 3, type: 'articulo', title: 'Artículo 1', description: 'Descripción de la tarjeta 2.1', link: 'https://example.com/articulo1', image:'' },
      { id: 4, type: 'articulo', title: 'Artículo 2', description: 'Descripción de la tarjeta 2.2', link: 'https://example.com/articulo2', image:'' },
      { id: 5, type: 'blog', title: 'Blog 1', description: 'Descripción de la tarjeta 3.1', link: 'https://example.com/blog1', image:'' },
      { id: 6, type: 'blog', title: 'Blog 2', description: 'Descripción de la tarjeta 3.2', link: 'https://example.com/blog2' , image:''},
    ];
  
    function renderCards(cards) {
  cardContainer.innerHTML = '';
  cards.forEach(card => {
    const cardElement = document.createElement('div');
    cardElement.className = 'bg-white p-4 shadow rounded flex items-center'; // Agregamos flexbox para alinear la imagen y el contenido
    cardElement.innerHTML = `
      <img src="${card.image}" class="w-16 h-16 mr-4" alt="Imagen recurso"> <!-- Agregamos la imagen -->
      <div>
        <h3 class="text-lg font-bold mb-2">${card.title}</h3>
        <p>${card.description}</p>
        <a href="${card.link}" target="_blank" class="mt-4 inline-block bg-tcf-blue text-white py-2 px-4 rounded">Ver Recurso</a>
      </div>
    `;
    cardContainer.appendChild(cardElement);
  });
}
  
    // Render initial cards
    renderCards(cardsData);
  
    // Add event listener to update cards based on select change
    itemSelect.addEventListener('change', (event) => {
      const selectedValue = event.target.value;
      if (selectedValue === 'all') {
        renderCards(cardsData);
      } else {
        const filteredCards = cardsData.filter(card => card.type === selectedValue);
        renderCards(filteredCards);
      }
    });
  </script>
  
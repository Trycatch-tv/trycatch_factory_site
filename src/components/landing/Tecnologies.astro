    <div class="flex gap-10 flex-wrap justify-center mx-auto mt-7">
        {technologyData.map((item) => (
            <div class="border rounded-xl py-6 px-2.5 md:px-8 max-w-xl">
                <h3  class="text-xl font-bold leading-none sm:text-2xl text-center">
                    { item.title }
                </h3>
               <div class="flex flex-col md:flex-row gap-1 justify-center items-center my-5">
                <strong>+{item.quantity }</strong>
                <p class="text-center" >
                    { item.description }    
                </p>
               </div>
                <div class="flex flex-wrap gap-1.5">
                   {
                    Array(1,2,3,4,5).map((item) => (
                        <div class="h-24 rounded-xl border overflow-hidden place-content-between" >
                            <img class="w-full h-full" src="https://www.smartphonetechnology.com.ec/static/products/images/default-image.jpg" alt="">
                        </div>
                    ))
                   }
                </div>
            </div>
        ))}
    </div>

<div class="flex flex-col md:flex-row gap-10 px-4" id="form">

<div class="flex max-w-screen-xl mx-auto flex-col md:flex-row gap-10 px-4">

  <article class="flex flex-col  items-center  justify-center">
    <h1 class="font-bold text-3xl inline-block w-full md:text-4xl text-start mb-8">Dejanos tus datos </h1>
    <p class="text-tcf-blue inline-block text-start text-base md:text-lg"> Nos comunicaremos contigo para brindarte la ayuda que necesitas</p>
  </article>
  <div class="relative bg-white rounded-lg border  shadow-lg mx-auto px-6 py-8 max-w-screen-xl  justify-center">
        <form class="overflow-y-visible ">
          <div class="flex flex-col sm:flex-row sm:gap-2">
            <!-- Input nombre -->
            <div class="w-full md:w-1/2 mb-4 md:mb-6">
              <label
                class="block uppercase tracking-wide text-tcf-blue text-xs font-bold mb-2"
                for="grid-first-name"
              >
                Nombre
              </label>
              <input
                class="appearance-none block w-full bg-gray-200 text-tcf-blue rounded py-3 px-4  leading-tight focus:outline-none focus:bg-white"
                id="grid-first-name"
                type="text"
                placeholder="Nombre"
              />
            </div>

            <!-- Input apellidos -->
            <div class="w-full md:w-1/2 mb-4 md:mb-6">
              <label
                class="block uppercase tracking-wide text-tcf-blue text-xs font-bold mb-2"
                for="grid-last-name"
              >
                Apellidos
              </label>
              <input
                class="appearance-none block w-full bg-gray-200 text-tcf-blue rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                id="grid-last-name"
                type="text"
                placeholder="Apellidos"
              />
            </div>
          </div>

          <!-- Input email -->
          <div class="flex flex-wrap">
            <div class="w-full mb-4 md:mb-6">
              <label
                class="block uppercase tracking-wide text-tcf-blue text-xs font-bold mb-2"
              >
                Email corporativo
              </label>
              <input
                class="appearance-none block w-full bg-gray-200 text-tcf-blue rounded py-3 px-4  leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                id="grid-password"
                type="email"
                placeholder="example@mail.com"
              />
              <p class="text-gray-600 text-xs italic"></p>
            </div>
          </div>

          <!-- Input celular -->
          <div class="flex flex-col items-center sm:flex-row sm:gap-2">
            <div class="w-full md:w-full mb-4 md:mb-6 lg:w-1/3">
              <label
                class="block uppercase tracking-wide text-tcf-blue text-xs font-bold mb-2"
                for="grid-zip"
              >
                Número de celular
              </label>
              <input
                class="appearance-none block w-full bg-gray-200 text-tcf-blue rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                id="grid-zip"
                type="text"
                placeholder="+57 300 123 4567"
              />
            </div>

            <!-- Input empresa -->
            <div class="w-full md:w-full mb-4 md:mb-6 lg:w-1/3">
              <label
                class="block uppercase tracking-wide text-tcf-blue text-xs font-bold mb-2"
                for="grid-zip"
              >
                Nombre de la empresa
              </label>
              <input
                class="appearance-none block w-full bg-gray-200 text-tcf-blue rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                id="grid-zip"
                type="text"
                placeholder="Nombre de la empresa"
              />
            </div>

            <!-- Input ciudad -->
            <div class="w-full md:w-full mb-4 md:mb-6 lg:w-1/3">
              <label
                class="block uppercase tracking-wide text-tcf-blue text-xs font-bold mb-2"
                for="grid-zip"
              >
                Ciudad
              </label>
              <input
                class="appearance-none block w-full bg-gray-200 text-tcf-blue rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                id="grid-zip"
                type="text"
                placeholder="Ciudad"
              />
            </div>
          </div>

          <!-- Text area -->

          <div class="flex flex-wrap mb-4 md:mb-6 ">
            <div class="w-full ">
              <label
                class="block uppercase tracking-wide text-tcf-blue text-xs font-bold mb-2"
              >
                Déjanos tu mensaje y pronto nos contactaremos contigo
              </label>
              <textarea
                class="appearance-none block w-full bg-gray-200 text-tcf-blue rounded py-3 px-4  leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                id="grid-password"
                placeholder="escribe aquí"></textarea>
              <p class="text-gray-600 text-xs italic"></p>
            </div>
          </div>

          <!-- Boton enviar -->

          <div class="flex justify-end ">
            <button
              class="text-white rounded-3xl hover:bg-gray-50 hover:text-tcf-blue hover:border hover:border-tcf-blue bg-tcf-blue font-bold py-2 px-4  text-xl"
            >
              Enviar
            </button>
          </div>
        </form>
      </div>
  </div>

<script>
   import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  gsap.registerPlugin(ScrollTrigger);
  gsap.fromTo(
    "#form",
    {
      opacity: 0,
      y: 50,
    },
    {
      opacity: 1,
      y: 0,
      duration: 1,
      ease: "power2.out",
      stagger: 0.3, // Añade un retardo entre cada tarjeta
      scrollTrigger: {
        trigger: "#form",
        start: "top 80%", // Comienza cuando el contenedor está en el 80% de la ventana
        end: "top 20%", // Termina cuando el contenedor está en el 20% de la ventana
        scrub: 1, // La animación sigue el scroll de manera suave
       
      },
    },
  );
</script>
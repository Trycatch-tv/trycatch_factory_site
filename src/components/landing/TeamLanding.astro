---
import { Image } from "astro:assets";
import HeroImage from "../../assets/img/worker_svgrepo.com.svg";

const content = {
  title: "Conoce a nuestro equipo de trabajo",
  description:
    "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.",

  image: {
    url: "/src/assets/img/worker_svgrepo.com.svg",
    description: "TryCatch.tv Nibble",
  },
};
---

<section
  class="relative min-h-screen pt-40 bg-heroBgImgTeam bg-cover bg-center bg-no-repeat flex flex-col justify-center w-full"
>
  <div
    class="w-full h-full top-0 bg-black bg-opacity-50 absolute backdrop-blur-sm"
  >
  </div>
  <div
    class="flex flex-col max-w-screen-xl relative z-10 w-full items-center lg:flex-row px-8 mx-auto"
  >
    <article class="mb-4 md:w-2/3">
      <h2
        class="max-w-xl mb-5 text-4xl text-white font-extrabold tracking-tight leading-none md:text-5xl text-center xl:text-6xl lg:mb-8 lg:text-start"
      >
        {content.title}
      </h2>
      <p
        class="max-w-xl text-white text-balance font-semibold mb-5 lg:max-w-md lg:mb-14 lg:text-start text-center"
      >
        {content.description}
      </p>
    </article>

    <div class="lg:w-1/2">
      <Image
        src={HeroImage}
        class="object-cover w-full"
        alt="TryCatch.tv Nibble"
      />
    </div>
  </div>
</section>

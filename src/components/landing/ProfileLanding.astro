---
import CardsTeam from "./CardsTeam.astro";
import Ceo from "../../assets/imgTeam/ceo.webp";
import Cso from "../../assets/imgTeam/juliana.webp";
import Cmo from "../../assets/imgTeam/carlos.webp";
import Cpo from "../../assets/imgTeam/william.webp";
import Cto from "../../assets/imgTeam/cto.webp";
import Coo from "../../assets/imgTeam/coo.webp";
import TeachLead from "../../assets/img/teachlead.jpeg";
import FrontEnd from "../../assets/img/frontend.jpeg";
import BackEnd from "../../assets/img/backend.jpeg";
import DesignUiUx from "../../assets/img/designuiux.jpeg";
import CardRolsTeam from "./CardRolsTeam.astro";

const contentCards = {
  ceo: {
    title: "CEO",
    name: "Julian Luna",
    image: Ceo,
  },
  cso: {
    title: "CSO",
    name: "Juliana Arenas",
    image: Cso,
  },
  cmo: {
    title: "CMO",
    name: "Carlos Nivia",
    image: Cmo,
  },
  cpo: {
    title: "CPO",
    name: "Willian Poveda",
    image: Cpo,
  },
  cto: {
    title: "CTO",
    name: "Andres Hernandez",
    image: Cto,
  },
  coo: {
    title: "COO",
    name: "Daniel Luna",
    image: Coo,
  },
};
const contentRolsTeam = {
  techlead: {
    title: "Tech Lead +4",
    image: TeachLead,
  },
  frontEnd: {
    title: "Front End +5",
    image: FrontEnd,
  },
  backEnd: {
    title: "Back End +9",
    image: BackEnd,
  },
  designUiUx: {
    title: "Design UI/UX +2",
    image: DesignUiUx,
  },
};
---

<section class="py-16 min-h-[90vh]" id="seccionProfiles">
  <h1
    class="min-w-xl mb-5 py-10 text-center text-3xl md:text-4xl text-[#172554] font-bold leading-none md:text-center xl:text-6x lg:mb-14"
  >
    Nuestro Equipo
  </h1>
  <div class="grid max-w-screen-xl mx-auto grid-cols-1 md:grid-cols-2 gap-2 md:gap-8 lg:gap-12 mt-12">
    <div class="col-span-2">
      <CardsTeam {...contentCards.ceo} />
    </div>
    <div
      class="flex flex-wrap items-center gap-4 md:gap-8 lg:gap-12 w-full col-span-2 mx-auto max-sm:flex-col"
    >
      <div class="flex-1">
        <CardsTeam {...contentCards.cso} />
      </div>
      <div class="flex-1">
        <CardsTeam {...contentCards.cmo} />
      </div>
      <div class="flex-1">
        <CardsTeam {...contentCards.cpo} />
      </div>
      <div class="flex-1">
        <CardsTeam {...contentCards.cto} />
      </div>
      <div class="flex-1">
        <CardsTeam {...contentCards.coo} />
      </div>
    </div>
    <div class="grid py-28 grid-cols-1 self-center md:grid-cols-4  md:gap-8 gap-4 col-span-full lg:gap-4 w-full mx-auto place-items-center">
    <CardRolsTeam {...contentRolsTeam.techlead} />
    <CardRolsTeam {...contentRolsTeam.frontEnd} />
    <CardRolsTeam {...contentRolsTeam.backEnd} />
    <CardRolsTeam {...contentRolsTeam.designUiUx} />
    </div>
  </div>
</section>
<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  gsap.registerPlugin(ScrollTrigger);
  gsap.fromTo(
    "#profiles",
    {
      y: 100,
    },
    {
      y: 0,
      duration: 1,
      ease: "power2.out",
      stagger: 0.3, // A침ade un retardo entre cada tarjeta
      scrollTrigger: {
        trigger: "#seccionProfiles",
        start: "top 80%", // Comienza cuando el contenedor est치 en el 80% de la ventana
        end: "top 20%", // Termina cuando el contenedor est치 en el 20% de la ventana
        scrub: 1, // La animaci칩n sigue el scroll de manera suave
      },
    },
  );
</script>

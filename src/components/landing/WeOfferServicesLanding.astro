---
const { levelEstructureTeam, desarrollo } = Astro.props;
---

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  gsap.registerPlugin(ScrollTrigger);
  gsap.fromTo(
    "#divtwo",
    {
      duration: 1,
      opacity: 0,
      y: 50,
      stagger: 0.2,
      ease: "power2.out",
    },
    {
      y: -20,
      opacity: 1,
      scrollTrigger: {
        trigger: "#web",
        start: "top 80%", // Start the animation when the top of the box hits 80% from the top of the viewport
        end: "top 20%", // End the animation when the top of the box hits 20% from the top of the viewport
        scrub: true,
      },
    },
  );
  gsap.fromTo(
    "#divone",
    {
      duration: 1,
      opacity: 0,
      y: 50,
      stagger: 0.2,
      ease: "power2.out",
    },
    {
      y: -20,
      opacity: 1,
      scrollTrigger: {
        trigger: "#web",
        start: "top 80%", // Start the animation when the top of the box hits 80% from the top of the viewport
        end: "top 20%", // End the animation when the top of the box hits 20% from the top of the viewport
        scrub: true,
      },
    },
  );
</script>
<section
  class="relative bg-weOfferBgServices bg-cover bg-center bg-no-repeat flex flex-col justify-center w-full min-h-screen py-10" id="web"
>
<div
class="w-full h-full top-0 bg-black bg-opacity-20 absolute backdrop-blur-sm"
>
</div>

  <div class="relative ">
    <h1 class="text-5xl text-center text-white font-bold">¿Qué podemos ofrecerte?</h1>
    <div
      class="flex flex-col justify-center items-center gap-40 p-10 md:flex-row"
    >
      <div
        class="justify-star p-4 border-4 bg-white/70 rounded-xl w-50 max-h-full" id="divone"
      >
        <h2
          class="text-tcf-blue font-extrabold items-center text-xl p-4 max-h-full"
        >
          A nivel estructural/equipo
        </h2>
        <ul class="list-disc p-4">
          {levelEstructureTeam.map((e: any) => <li class="list-disc text-xl p-1">{e}</li>)}
        </ul>
      </div>
      <div
        class="justify-start p-4 border-4 bg-white/70 rounded-xl w-50 max-h-full" id="divtwo"
      >
        <h2
          class="text-tcf-blue font-extrabold items-center text-xl p-4 max-h-full"
        >
          Desarrollo
        </h2>
        <ul class="list-disc p-4">
          {desarrollo.map((e: any) => <li class="list-disc text-xl p-1">{e}</li>)}
        </ul>
      </div>
    </div>
  </div>
</section>

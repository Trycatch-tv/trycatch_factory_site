---
import Image from "astro/components/Image.astro"
import question from "../../assets/img/question-circle-svgrepo-com.svg"

const {howContext,howItems} = Astro.props
---
<section class="min-h-screen  min-w-screen-2xl bg-como-bg bg-cover bg-center flex justify-center contrast-50 flex-wrap">
   <div class="absolute inset-0 bg-black bg-opacity-30"></div>
<div class="flex flex-col relative z-10 justify-center w-[585px] h-[726px] my-10 items-center bg-[#f9f9f9]">
   
   <Image src={question} alt="question" class="w-20 h-20" />
   <h3 class="text-center">¿Como funciona?</h3>
   <p class="text-xl text-justify w-72">{howContext} </p>
</div>
<div class="flex flex-col relative z-10 justify-center w-[585px] h-[726px] my-10 items-center bg-[#b6ebee] bg-opacity-80">
   <Image src={question} alt="question" class="w-20 h-20 " />
   <h3 class="text-center">¿Como funciona?</h3>
   <ul class="w-72">
      {Array.isArray(howItems) && howItems.length > 0 &&
      howItems.map((e:any)=>(
      <li class="list-disc text-xl">{e}</li>
      ))}
   </ul>
</div>
</section>
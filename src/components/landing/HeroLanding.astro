---
import { Image } from "astro:assets";
import HeroImage from "../../assets/img/EQUIPO3.png";
import { CalendarCheck, ChevronDown } from "lucide-astro";
import Background from "../../assets/img/Ellipse.png";
const content = {
  title: "Transformamos tus ideas en software personalizado",
  description:
    "Diseñamos y desarrollamos soluciones tecnológicas a medida para llevar tu negocio al siguiente nivel. Nuestro enfoque en la calidad, la innovación y la experiencia del cliente garantiza resultados excepcionales.",
  ctas: [
    {
      title: "Agenda una llamada ahora",
      link: "https://calendly.com/trycatchfactory-com/30min",
    },
    {
      title: "Descubre nuestras soluciones",
      link: "#services",
    },
  ],
  image: {
    url: "/src/assets/img/nibble.png",
    description: "TryCatch.tv Nibble",
  },
};
---

<section
  class="relative min-h-screen pt-40 bg-cover bg-center bg-no-repeat flex flex-col justify-center w-full"
  id="wrapper"
>
  <div class="w-full h-full top-0 bg-white"></div>
  <div
    class="flex max-sm:flex-col sm:flex-col max-w-screen-xl relative z-10 w-full items-center lg:flex-row px-8 mx-auto"
    id="content"
  >
    <article class="mb-4 max-w-2xl">
      <h1
        class="mb-5 text-start text-wrap text-2xl text-[#101F57] font-extrabold tracking-tight leading-none md:text-5xl text-center xl:text-4xl xl:text-left lg:mb-8 lg:text-start"
      >
        {content.title}
      </h1>
      <p
        class="max-w-xl text-[#101F57] text-balance text-xl lg:text-2xl font-medium mb-5 lg:mb-14 lg:text-start text-center sm:text-center max-sm:text-center"
      >
        {content.description}
      </p>
      <div
        class="flex justify-center gap-2 mb-5 lg:justify-start lg:mb-14 max-sm:mt-5 md:justify-center max-sm:flex-col max-sm:items-center"
      >
        <a
          class="flex items-center gap-1 cursor-pointer transition-all duration-500 min-w-[154px] py-3 px-4 me-2 mb-2 text-sm text-center font-semibold text-tcf-blue focus:outline-none bg-white rounded-full border border-tcf-gray hover:bg-tcf-gray-l hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-tcf-gray-l shadow-sm"
          target="_blank"
          href={content.ctas[0].link}
          >{content.ctas[0].title}
          <span>
            <CalendarCheck />
          </span>
        </a>
        <a
          class="flex items-center gap-1 cursor-pointer transition-all duration-500 min-w-[154px] py-3 px-4 me-2 mb-2 text-sm text-center font-semibold text-white focus:outline-none bg- rounded-full hover:bg-purple-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-tcf-gray-l bg-blue-950 border border-gray-500 shadow-sm"
          href={content.ctas[1].link}
          >{content.ctas[1].title}
          <span>
            <ChevronDown />
          </span>
        </a>
      </div>
    </article>

    <div class="lg:w-1/2">
      <Image
        src={Background}
        class="absolute inset-y-0 right-0 w-1/2 h-[456px] z-0"
        alt="Background"
      />
      <Image
        src={HeroImage}
        class="relative w-[565px] object-cover object-center z-10 rounded-lg h-[456px]"
        alt="TryCatch.tv Nibble"
        id="image"
      />
    </div>
  </div>
</section>

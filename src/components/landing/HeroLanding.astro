---
import { Image } from "astro:assets";
import HeroImage from "../../assets/img/nibble.png";

const content = {
  title: "Software personalizado",
  description:
    "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.",
  ctas: [
    {
      title: "Call to action",
      link: "#",
    },
    {
      title: "CTA 2",
      link: "#",
    },
  ],
  image: {
    url: "/src/assets/img/nibble.png",
    description: "TryCatch.tv Nibble",
  },
};
---

<section class="relative min-h-screen pt-40 bg-heroBgImg bg-cover bg-center bg-no-repeat flex flex-col justify-center w-full" >
  <div class="w-full h-full top-0 bg-black bg-opacity-50 absolute backdrop-blur-sm">

  </div>
  <div
    class="flex flex-col  max-w-screen-xl relative z-10 w-full items-center  lg:flex-row px-8 mx-auto "
  >
    <article class="mb-4">
      <h2
        class="max-w-xl mb-5 text-4xl text-white font-extrabold tracking-tight leading-none md:text-5xl text-center xl:text-6xl lg:mb-8 lg:text-start"
      >
        {content.title}
      </h1>
      <p
        class="max-w-xl text-white text-balance font-semibold mb-5 lg:max-w-md lg:mb-14 lg:text-start text-center"
      >
        {content.description}
      </p>
      <div class="flex justify-center gap-2 mb-5 lg:justify-start lg:mb-14 max-sm:mt-5 md:justify-center">
        <a
          class="max-w-[154px] cursor-pointer transition-all duration-500 min-w-[154px] h-10 py-2.5 px-3 me-2 mb-2 text-sm text-center font-bold text-tcf-blue focus:outline-none bg-white rounded-full border border-tcf-gray hover:bg-tcf-gray-l hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-tcf-gray-l"
          >{content.ctas[0].title}
        </a>
        <a
          class="max-w-[154px] cursor-pointer transition-all duration-500 min-w-[154px] h-10 py-2.5 px-3 me-2 mb-2 text-sm text-center font-medium text-white focus:outline-none bg-tcf-blue rounded-full border border-tcf-gray hover:bg-tcf-gray-l hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-tcf-gray-l"
          >{content.ctas[1].title}
        </a>
      </div>
    </article>
  
      <div class=" lg:w-1/2">
      <Image
        src={HeroImage}
        class="w-full object-cover"
        alt="TryCatch.tv Nibble"
      />
    </div>
  </div>

</section>

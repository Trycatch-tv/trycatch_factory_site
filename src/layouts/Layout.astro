---


import Footer from "../components/global/Footer.astro";
import Navbar from "../components/global/Navbar.astro";
import ContactFormLanding from "../components/landing/ContactFormLanding.astro";


interface Props {
  title: string;
}

const { title } = Astro.props;
const { pathname } = Astro.url;


---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Try Factory" />
    <meta name="keywords" content="astro, astrojs" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <!-- fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

   
    <title>{title}</title>
  </head>
  <body>
    <Navbar />
    <slot />

    <section class="py-20 relative mx-auto bg-contact bg-cover bg-no-repeat bg-center">
      <div
    class="w-full h-full top-0 absolute backdrop-blur-sm"
  >
  </div>
      <ContactFormLanding />
    </section>

    <Footer />
  </body>
</html>
<script>
 const link = document.createElement('link');
      link.href = "https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap";
      link.rel = "stylesheet";
      link.onload = () => {
        document.body.style.fontFamily = 'Inter, sans-serif';
      };
      document.head.appendChild(link);
</script>
<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap');
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  html {
    /*     font-family: "JetBrains Mono", monospace, system-ui, sans-serif !important;
 */
    font-family: "Inter", sans-serif !important;
    scroll-behavior: smooth;
  }
</style>
